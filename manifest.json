{
  "description": "MacOS inspired Mojave dynamic theme that changes based on time.",
  "homepage_url": "https://github.com/karanvirheer/Firefox-Mojave-Theme",
  "manifest_version": 2,
  "name": "MacOS Mojave Dynamic Theme",
  "permissions": ["alarms", "theme"],
  "icons": {
    "16": "icons/Icon_16x16.png",
    "32": "icons/Icon_32x32.png",
    "48": "icons/Icon_48x48.png",
    "96": "icons/Icon_96x96.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/Icon_16x16.png",
      "32": "icons/Icon_32x32.png"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "version": "1.1"
}
